OPENJ9_SHARED_LIBRARIES := \
	$(filter-out \
		$(notdir $(OPENJ9_ALT_SHARED_LIBRARIES) $(OPENJ9_JAVA_BASE_LIBRARIES) $(OPENJ9_SHARED_CLASSES_LIBRARIES)), \
		$(notdir $(OPENJ9_ALL_LIBRARIES)))

